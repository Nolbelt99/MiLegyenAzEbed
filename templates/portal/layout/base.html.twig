<!DOCTYPE html>
<html lang="hu">
  <head>
      <title>{% block title %}Mi legyen az ebéd{% endblock %}</title>

      {% include "portal/layout/_head.html.twig" %}

      {% block stylesheets %}
          {{ encore_entry_link_tags('app-portal') }}
      {% endblock %}

      {% block javascripts %}
        {{ encore_entry_script_tags('app-portal') }}
      {% endblock %}
  </head>
  <body>
  <nav class="navbar navbar-expand-lg bg-primary mb-0">
    <div class="container-fluid">
        <div class="navbar-translate">
            <a class="navbar-brand" href="/" rel="tooltip" title="" data-placement="bottom">
                Vállalatirányítási rendszer
            </a>
            <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
                    aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-bar top-bar"></span>
                <span class="navbar-toggler-bar middle-bar"></span>
                <span class="navbar-toggler-bar bottom-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="user-dropdown" data-toggle="dropdown">
                        <i class="now-ui-icons design_bullet-list-67"></i>
                        <p>Kiválasztási rendszer</p>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-dropdown">
                        <a class="dropdown-item" href="#">
                            Kiválasztásaim
                        </a>
                        <a class="dropdown-item" href="#">
                            Összes kiválasztás
                        </a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="user-dropdown" data-toggle="dropdown">
                        <i class="now-ui-icons design_bullet-list-67"></i>
                        <p>CRM</p>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-dropdown">
                        <a class="dropdown-item" href="#">
                            Ügyfelek
                        </a>

                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="user-dropdown" data-toggle="dropdown">
                        <i class="now-ui-icons design_bullet-list-67"></i>
                        <p>Nyilvántartás</p>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-dropdown">
                        <a class="dropdown-item" href="#">
                            Munkavállalók
                        </a>
                        <a class="dropdown-item" href="#">
                            Dokumentum sablonok
                        </a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="user-dropdown" data-toggle="dropdown">
                        <i class="now-ui-icons users_single-02"></i>

                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
    <div id="page">
      {{ include('/portal/layout/_menu.html.twig') }}
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <span class="alert alert-warning d-block m-0">
            <span class="d-block">
              <span class="message">{{ message }}</span>
            </span>
          </span>
        {% endfor %}
      {% endfor %}
      <div class="{% block containerClasses %} {% endblock %} p-0 m-0" id="page-content">
        {% block body %}
        {% endblock %}
      </div>
      {{ include('/portal/layout/_footer.html.twig') }}
    </div>
  </body>
</html>
